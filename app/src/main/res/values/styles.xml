<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->
    <style name="Widget.Catalog.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <!-- Toolbar should always be within an AppBarLayout which provides the background. -->
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Catalog.Toolbar.WithCloseButton" parent="Widget.Catalog.Toolbar">
                <item name="navigationIcon">@drawable/ic_close</item>
    </style>

    <style name="Widget.Catalog.Toolbar.WithBackArrow" parent="Widget.Catalog.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.MyTheme.ExtendedFabSecondary" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">?colorSurface</item>
        <item name="iconSize">18sp</item>
        <item name="android:textColor">@color/material_color_grey_400</item>
        <item name="iconTint">@color/material_color_grey_400</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Widget.MyTheme.TextViewTitle" parent="Widget.MaterialComponents.TextView">
        <item name="textAppearanceBody2">?textAppearanceBody2</item>
        <item name="android:paddingStart">72dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="PaddingPreference" parent="">
        <item name="android:paddingStart">72dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>


</resources>
